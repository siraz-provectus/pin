<h2>Регистрация</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name),:html => {:multipart => true}) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.label :email %><br />
  <%= f.email_field :email, :autofocus => true %></div>

  <div><%= f.label :first_name, "Имя" %><br />
  <%= f.text_field :first_name %></div>

  <div><%= f.label :last_name, "Фамилия" %><br />
  <%= f.text_field :last_name %></div>

  <div><%= f.label :avatar, "Аватар" %><br />
  <%= f.file_field :avatar %></div>

  <div><%= f.label :password, "Пароль" %><br />
  <%= f.password_field :password %></div>

  <div><%= f.label :password_confirmation, "Подтверждение пароля" %><br />
  <%= f.password_field :password_confirmation %></div><br />

  <div><%= f.submit "Зарегистрироваться", class: "btn btn-success" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
