<h2>Регистрация</h2>
<%= link_to "Зарегистрироваться через Facebook", user_omniauth_authorize_path(:facebook), class: "b-login__fb" %><br />
    <%= link_to "Зарегистрироваться через Vkontakte", user_omniauth_authorize_path(:vkontakte) %><br />

<%#= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%#= devise_error_messages! %>
  <% #if f.object.email_required? %>
  <div><%#= f.label :email %><br />
  <%#= f.email_field :email, :autofocus => true %></div>
  <%# end %>

  <div><%#= f.label :first_name, "Имя" %><br />
  <%#= f.text_field :first_name %></div>

  <div><%#= f.label :last_name, "Фамилия" %><br />
  <%#= f.text_field :last_name %></div>
  <%#= f.hidden_field :remote_avatar_url %>
  <%# if f.object.password_required? %>
    <div><%#= f.label :avatar, "Аватар" %>
    <%#= f.file_field :avatar %>
    </div>
 
    <div><%#= f.label :password, "Пароль" %><br />
    <%#= f.password_field :password %></div>

    <div><%#= f.label :password_confirmation, "Подтверждение пароля" %><br />
    <%#= f.password_field :password_confirmation %></div>
  <%# end %>
  <br />
  <div><%#= f.submit "Зарегистрироваться", class: "btn btn-success" %>
  </div>
<%# end %>

<%#= render "devise/shared/links" %>
