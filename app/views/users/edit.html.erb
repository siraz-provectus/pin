<h2>Настроить профиль</h2>
<%= form_for(@user,:html => {:multipart => true}) do |f| %>

  <div><%= f.label :first_name, "Имя" %><br />
  <%= f.text_field :first_name, :autofocus => true %></div>

  <div><%= f.label :last_name, "Фамилия" %><br />
  <%= f.text_field :last_name %></div><br />
  <div>
  <%= image_tag(@user.avatar_url(:thumb), class: "thumbnail avatar_left") if @user.avatar? %></div>
  <div><%= f.label :avatar, "Аватар" %>
  <%= f.file_field :avatar %></div>
  <div class="clear"></div><br />

  <div><%= f.submit "Обновить", class: "btn btn-success" %>
  </div>
<% end %>
