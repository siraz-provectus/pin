<%= div_for pin do %>
  <% pin.comments.each do |com| %>
    <% if com.user.avatar? %>
      <%= link_to user_url(com.user) do %>
        <%= image_tag(com.user.avatar_url(:small), class: "comment_top _left") %>
      <% end %>
    <% end %>
    <div >
      <%= link_to com.user.full_name, user_url(pin.user), class: 'comment_user_style' %>
      <%= link_to 'x', comment_url(com.id),method: "delete", remote: true, class: 'comment_destroy_style pull-right' %>
      <p class = 'comment_comment_style' ><%= com.comment %> </p>
    </div>
    <div class = 'clear'></div>
  <% end %>
<% end %>