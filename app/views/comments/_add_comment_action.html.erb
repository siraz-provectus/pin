<%= form_for([pin, pin.comments.new], remote: true, class: "pull-right") do |f| %>
  <% if current_user.avatar? %>
    <%= link_to user_url(current_user) do %>
      <%= image_tag(current_user.avatar_url(:small), class: "comment_top _left") %>
    <% end %>
  <%end%>
  <%= f.text_area :comment, class: 'add_comment', placeholder: "Добавить коментарий", id: "comment_" + pin.id.to_s%>
  <div class = 'clear'></div>
  <%= f.submit "Отправить", class: "btn btn-info" %>
<% end %>